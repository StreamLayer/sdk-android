<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="android:spinnerStyle">@style/SpinnerAppTheme</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemAppTheme</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SpinnerAppTheme" parent="android:Widget.Spinner">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:dropDownSelector">@color/slr_red</item>
    </style>

    <style name="SpinnerDropDownItemAppTheme" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@color/slr_blue80</item>
    </style>

    <!--    Overriding Themes Example-->
    <!--    <style name="StreamLayerSDK_OverlayStyle" parent="StreamLayerSDK_AppTheme">-->
    <!--        <item name="slrOverlayToolbarBackGround">@color/slr_toolbar_bg</item>-->
    <!--        <item name="slrOverlayPickerBackGround">@drawable/shape_rectangle_rounded24</item>-->
    <!--        <item name="slrOverlayBackGround">@android:color/transparent</item>-->
    <!--    </style>-->
    <style name="MainOverlayTheme" parent="StreamLayerSDK_MainTheme">
        <item name="slrOverlayMainSwipeDownBackgroundColor">@color/pink</item>
    </style>

    <style name="AuthSyncTheme" parent="StreamLayerSDK_AuthTheme">
        <item name="slrOverlayButton">@style/AuthSync_Button</item>
        <item name="slrOverlayBackground">#DA1A13D8</item>
        <item name="slrOverlayAuthSyncLottieInfoView">@style/AuthSync_Info</item>
        <item name="slrOverlayAuthCountryPickerItemTitleStyle">@style/ItemList</item>
    </style>

    <style name="ItemList" parent="StreamLayerSDK_ItemList">
        <item name="android:textColor">#57FF2A</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AuthSync_Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#FF1A1A</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:textColor">@color/slr_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:text">@string/auth_sync_btn</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textAppearance">@style/StreamLayerSDK_Button.TextAppearance</item>
    </style>

    <style name="AuthSync_Info" parent="StreamLayerSDK_AuthTheme.LottieInfoView">
        <item name="slrLottieInfoTitle">@string/auth_sync_title</item>
        <item name="slrLottieInfoMessageStyle">@style/AuthSyncTheme.Message</item>
        <item name="slrLottieInfoTitleStyle">@style/AuthSyncTheme.Title</item>
    </style>

    <style name="AuthSyncTheme.Title">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">#FFD813</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AuthSyncTheme.Message">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/slr_red</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
